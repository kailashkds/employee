{% extends 'base.html.twig' %}

{% block title %}Employee{% endblock %}

{% block body %}
    <h1 style="text-align: center;">Employee</h1>

    <div class="col-sm-12">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ employee.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ employee.name }}</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>{{ employee.address }}</td>
                </tr>
                <tr>
                    <th>Salary</th>
                    <td>{{ employee.salary }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <a href="{{ path('app_employee_index') }}">back to list</a>

    <a href="{{ path('app_employee_edit', {'id': employee.id}) }}"><i class="fa fa-pencil" style="font-size:25px;color:#2e6da4"></i></a>

    {{ include('employee/_delete_form.html.twig') }}
{% endblock %}
